{% extends 'ProjetBDDThesaurusBundle:Default:layout.html.twig' %}

{% block stylesheet %}
parent()
{% endblock %}

{% block title %}Edition du concept "{{ entity }}"{% endblock %}

{% block content %}
<h1>Edition du concept "{{ entity }}"</h1>

<form id="mainform" action="{{ path('concept_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
	<a href="{{ path('concept_show', { 'id': entity.id }) }}" title="Annuler" class="annuler">
		<img src="{{ asset('bundles/projetbddthesaurus/images/annuler.svg') }}" alt="Annuler">
	</a>
        <button id="submit" type="submit">Editer</button>
    </p>
</form>
<form action="{{ path('concept_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button id="delete" type="submit">Supprimer</button>
</form>

{% endblock %}
